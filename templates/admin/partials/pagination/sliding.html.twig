<div class="card-footer d-flex align-items-center">
    <p class="m-0 text-muted">{{ 'pagination.current'|trans({'%min%': firstItemNumber, '%max%': lastItemNumber, '%total%': totalCount}) }}</p>
    {% if pageCount > 1 %}
        <ul class="pagination m-0 ml-auto">
            {% if first is defined and current != first %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}"><i class="las la-angle-double-left"></i></a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="las la-angle-double-left"></i></span>
                </li>
            {% endif %}
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="las la-angle-left"></i></a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="las la-angle-left"></i></span>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
                {% else %}
                    <li class="page-item active"><span class="page-link">{{ page }}</span></li>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="las la-angle-right"></i></a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="las la-angle-right"></i></span>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}"><i class="las la-angle-double-right"></i></a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="las la-angle-double-right"></i></span>
                </li>
            {% endif %}
        </ul>
    {% endif %}
</div>